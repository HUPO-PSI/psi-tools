        <CvReference cvName="PSI-MI" cvIdentifier="MI"/>
    </CvReferenceList>

    <CvMappingRuleList>
        <!--
             it fetches 6 colors from 'garage/bikes/@color' where it should retreive
             6 bikes and check on their individual color
          -->        
